<h1><%= (@topic.title) %>
  <small>
     <%= link_to "Edit", edit_topic_path, class: "btn btn-warning btn-sm" %>
     <%= link_to "Delete Topic", @topic, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure you want to delete this topic?'} %>
     <%= link_to "Back", topics_path, class: "btn btn-primary btn-sm" %>
     <%= link_to "New Blocmark", new_topic_bookmark_path(@topic), class: "btn btn-success pull-right" %>
   </small>
</h1>
<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <% @topic.bookmarks.each do |link| %>
        <ul>
          <li class="thumbnail">
            <%= link_to link.url, topic_bookmark_path(link.topic, link) %>
            <%= render partial: 'likes/like', locals: { bookmark: link } %>
            <div>
              <% if policy(link).edit? %>
                <%= link_to "Edit Bookmark", edit_topic_bookmark_path(link.topic, link), class: "btn btn-warning btn-xs" %>
              <% end %>
              <% if policy(link).destroy? %>
                <%= link_to "Delete Bookmark", [link.topic, link], method: :delete, class: 'btn btn-danger btn-xs', data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
              <% end %>
            </div>
          </li>
          </ul>
          <% end %>
      </div>
    </div>
  </div>
</div>
