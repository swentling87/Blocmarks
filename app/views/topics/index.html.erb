<h1>All Blocmarks</h1>
<div>
  <%= link_to "New Topic", new_topic_path, class: "btn btn-success" %>
</div>
<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topic.title, topic %> |
          <small>
            <%= link_to "Delete Topic", topic, method: :delete, data: { confirm: 'Are you sure you want to delete this topic?'} %>
          </small>
        </h4>
          <% topic.bookmarks.each do |link| %>
          <ul>
            <li class="thumbnail">
              <%= link_to link.url, topic_bookmark_path(link.topic, link) %>
              <%= render partial: 'likes/like', locals: { bookmark: link } %>
            </li>
          </ul>
            <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
