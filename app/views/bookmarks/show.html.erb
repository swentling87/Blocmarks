<div class="jumbotron">
  <% if policy(@bookmark).edit? %>
    <%= link_to "Edit Bookmark", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: "btn btn-warning" %>
  <% end %>
  <% if policy(@bookmark).destroy? %>
    <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
  <% end %>
  <h1><%= @bookmark.url %></h1>
  <div>
    <%= render partial: 'likes/like', locals: { bookmark: @bookmark } %>
    <%= link_to "Return to All", topics_path, class: 'btn btn-primary' %>
    <%= link_to "Return to Topic", topic_path(@bookmark.topic), class: 'btn btn-primary' %>
  </div>
</div>
