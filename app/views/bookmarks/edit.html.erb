<h1>Edit Blocmark</h1>

<div class="row">
  <div class="col-md-4">
    <h2>Guidelines for bookmarks:</h2>
    <ul>
      <li>No inappropriate content allowed.</li>
      <li>Have fun!</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@bookmark.topic, @bookmark] do |f| %>
    <div class="form-group">
      <%= f.label :Url %>
      <%= f.text_field :url, class: 'form-control', placeholder: "Enter the URL" %>
    </div>
    <%= f.submit "Save", class: 'btn btn-success' %>
    <%= link_to "Back", topic_path(@bookmark.topic), class: "btn btn-primary" %>
     <% end %>
   </div>
 </div>
